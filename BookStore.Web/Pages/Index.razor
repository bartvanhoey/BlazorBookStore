@page "/index"

<AuthorizeView>
    <Authorized>
        <p>Welcome, @context.User.Identity.Name</p>
    </Authorized>
    <NotAuthorized>
        <p>You are not signed in!</p>
    </NotAuthorized>
</AuthorizeView>

<AuthorizeView Roles="Publisher">
    <Authorized>
        <p>@context.User.Identity.Name, Your are a Publisher</p>
    </Authorized>
    <NotAuthorized>
        <p>You are not a publisher!</p>
    </NotAuthorized>
</AuthorizeView>