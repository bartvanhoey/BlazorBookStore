@page "/publishers"
@inherits PublishersBase 


<div class="col-12">
    <h3><b>Enter Publisher Information</b></h3>
    <hr>

    <ServerValidations IsVisible="IsVisible" IsSavedSuccessfully="IsSavedSuccessfully">
        Publisher: @RecordName
    </ServerValidations>

     <EditForm Model="@Publisher" OnValidSubmit="@SavePublisherAsync">
         @* <DataAnnotationsValidator/> *@
         <ValidationSummary/>
        <div class="col-12 row">
            <label for="name" class="col-2 font-weight-bold">Name</label>
            <input @ref="publisherNameRef" id="name" @bind="Publisher.Name" placeholder="Name" class="form-control col-3" />
            <ValidationMessage For="@(() => Publisher.Name)"/>
        </div>
        <div class="col-12 row">
            <label for="city" class="col-2 font-weight-bold">City</label>
           <InputSelect @bind-Value="Publisher.City" class="form-control col-3">
                @if (@Cities != null)
                {
                    <option value="">select city..</option>
                    @foreach (var city in Cities)
                    {
                        <option value="@city">@city</option>
                    }
                }
           </InputSelect>
        </div>
        <br>
        <div class="col-12 row">
            <span class="col-2"></span>
            <input type="submit" class="form-control col-1 btn btn-primary" value="Save">
            <span>&nbsp;</span>
            <input type="submit" class="form-control col-1 btn btn-primary" value="Clear">
        </div>
     </EditForm> 
</div>

<br>

<div class="col-10">
   <table class="table">
       <thead>
           <tr>
               <th>PublisherId</th>
               <th>Name</th>
               <th>City</th>
           </tr>
       </thead>
       <tbody>
        @foreach (var publisher in Publishers)
        {
            <tr>
                <td><NavLink href=@string.Format("/publishers/publisherdetails/{0}", @publisher.Id)>@publisher.Id</NavLink></td>
                <td>@publisher.Name</td>
                <td>@publisher.City</td>
            </tr>
        }
       </tbody>
   </table>
</div>


